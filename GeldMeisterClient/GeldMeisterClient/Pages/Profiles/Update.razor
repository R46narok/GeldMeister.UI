@page "/update"
@using GeldMeisterClient.Pages.Profiles.Requests
@using GeldMeisterClient.Services.User.Authentication
@using GeldMeisterClient.Services.User.Management
@inject AccountManagementService AccountManagementService;
<PageTitle>Sign Up</PageTitle>
<br/>
<section class="vh-100" style="background-color: #fff;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Update your account details</p>

                                <EditForm Model="@_request" OnValidSubmit="@HandleValidSubmitAsync" class="mt-4">
                                    <DataAnnotationsValidator/>
                                    <ValidationSummary/>
                                    
                                    <div class="form-outline mb-4">
                                        <InputText @bind-Value=_request.Email type="email" class="form-control form-control-lg" placeholder="Your Email"/>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <InputText @bind-Value=_request.PhoneNumber type="text" class="form-control form-control-lg" placeholder="Your Phone Number"/>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <InputText @bind-Value=_request.GitHub type="text" class="form-control form-control-lg" placeholder="Your GitHub Username"/>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <InputText @bind-Value=_request.Instagram type="text" class="form-control form-control-lg" placeholder="Your Instagram Username"/>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <InputText @bind-Value=_request.Twitter type="text" class="form-control form-control-lg" placeholder="Your Twitter Username"/>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn btn-primary btn-block btn-lg">
                                            Update
                                        </button>
                                    </div>

                                </EditForm>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"class="img-fluid">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<Footer/>

@code {

    private readonly UpdateRequest _request = new();
    
    private async Task HandleValidSubmitAsync()
    {
        await AccountManagementService.UpdateUserDetails(_request);
    }

}